<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Библиотека" Height="300" Width="400" Background="#1a001a">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <Button Content="Аренда" Click="Rent_Click" Margin="5" Width="200" Height="40" Style="{StaticResource DefaultButtonStyle}"/>
        <Button Content="Возврат" Click="Return_Click" Margin="5" Width="200" Height="40" Style="{StaticResource DefaultButtonStyle}"/>
        <Button Content="Штраф" Click="Fine_Click" Margin="5" Width="200" Height="40" Style="{StaticResource DefaultButtonStyle}"/>
        <Button Click="Librarian_Click" Margin="5" Width="200" Height="60">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Image Source="/Resources/library_icon.png" Width="40" Height="40"/>
                <TextBlock Text="Библиотекарь" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
