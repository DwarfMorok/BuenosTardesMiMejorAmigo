<Window x:Class="ReturnPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Возврат книги" Height="250" Width="400">
    <StackPanel Margin="20">
        <TextBox x:Name="BookId" Text="ID книги" Margin="5" TextChanged="CheckInputs"/>
        <TextBox x:Name="Name" Text="ФИО" Margin="5" TextChanged="CheckInputs"/>
        <TextBox x:Name="Phone" Text="Телефон" Margin="5" TextChanged="CheckInputs"/>
        <Button x:Name="ReturnButton" Content="Вернуть" Margin="5" IsEnabled="False" Click="ReturnButton_Click"/>
    </StackPanel>
    </Window>