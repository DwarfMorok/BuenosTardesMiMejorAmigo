<Window x:Class="LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация библиотекаря" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBox x:Name="Login" PlaceholderText="Логин" Margin="5"/>
        <PasswordBox x:Name="Password" PlaceholderText="Пароль" Margin="5"/>
        <TextBlock Text="Введите капчу:" Margin="5"/>
        <TextBlock x:Name="CaptchaText" FontSize="20" FontWeight="Bold" Margin="5"/>
        <TextBox x:Name="CaptchaInput" PlaceholderText="Капча" Margin="5"/>
        <Button x:Name="LoginButton" Content="Войти" Margin="5" Click="LoginButton_Click"/>
    </StackPanel>
</Window>