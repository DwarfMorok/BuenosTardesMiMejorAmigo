<Page x:Class="LibrarySelfService.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AuthPage">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <TextBlock Text="Логин" Margin="0,5" />
        <TextBox x:Name="LoginBox" Margin="0,5" />

        <TextBlock Text="Пароль" Margin="0,5" />
        <PasswordBox x:Name="PasswordBox" Margin="0,5" />

        <TextBlock Text="Капча" Margin="0,5" />
        <TextBlock x:Name="CaptchaText" FontWeight="Bold" FontSize="16" Margin="0,5" />
        <TextBox x:Name="CaptchaInput" Margin="0,5" />

        <Button Content="Обновить капчу" Click="RefreshCaptcha_Click" Margin="0,5" />
        <Button Content="Войти" Click="Login_Click" Margin="0,10" />
        <TextBlock x:Name="StatusText" Foreground="Red" TextAlignment="Center" />
    </StackPanel>
</Page>